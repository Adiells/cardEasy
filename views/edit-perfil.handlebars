{{!-- edit-profile.handlebars --}}
<div class="edit-profile-container">
    <form class="edit-profile-form" role="form" id="editForm">
        <h2>Editar Perfil</h2>
        <p class="subtitle">Atualize suas informações pessoais.</p>

        <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" id="name" name="name" placeholder="Nome do seu estabelecimento" required value="{{data.nome}}"> 
        </div>
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" placeholder="Nome de usuário" required value="{{data.username}}"> 
            <small id="usernameHelp">Não use espaços nem caracteres especiais</small>
        </div>
        <div class="form-group">
            <label for="bio">Biografia</label>
            <textarea id="bio" name="bio" rows="5" placeholder="Conte um pouco sobre você..." required>{{data.description}}</textarea> 
        </div>
        <button type="submit" class="btn-submit" id="btnSaveChanges">Salvar Alterações</button>

        <p class="profile-link">Voltar para o <a href="/perfil">meu perfil</a>.</p> {{!-- Ajuste o link conforme necessário --}}
    </form>
</div>

