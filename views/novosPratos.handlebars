        box-shadow: 0 0 0 2px rgba(255, 122, 51, 0.3);
    }

    .btn-submit {
        width: 100%;
        padding: 1rem;
        background: #FF7A33;
        color: #1a1a1a;
        border: none;
        border-radius: 5px;
        font-weight: 700;
        font-size: 1.1rem;
