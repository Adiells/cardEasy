{{#section "headerLinks"}}
    <li><a href="/#">Sou propietario</a></li>
    <li><a href="/#">Sobre</a></li>
    <li><a href="/restaurante/cadastro-pratos">Adicionar pedidos</a></li>
{{/section}}
<section class="restaurante-info" style="background: rgba(47, 47, 47, 0.7); backdrop-filter: blur(5px);">
    <div class="restaurante-header">
        <div class="restaurante-foto">
            <img src="/uploads/profilePhoto/{{result.0.image_url}}" alt="teste">{{!foto teste, lembrar de alterar e deixar dinamico}}
        </div>
        <div class="restaurante-detalhes">
            <h1>{{result.0.nome}}</h1>{{!lembrar de colocar conteudo dinamico aqui}}
            <p class="restaurante-username">@{{result.0.username}}</p>
            {{!-- <div class="restaurante-meta">
                <span><i class="fas fa-star"></i> 4.8 (256 avaliações)</span>
                <span><i class="fas fa-clock"></i> Aberto agora</span>
                <span><i class="fas fa-tag"></i> {{!restaurante.categoria}}categoria</span>
            </div> --}}
        </div>
    </div>
    <p class="restaurante-descricao">{{result.0.description}}</p>
</section>

<div class="menu-grid">
    {{#each result}}
    <div class="menu-item">
        <div class="item-image">
            <img src="/uploads/Restaurante{{restaurante_id}}/{{imagem}}" alt="{{titulo}}">
        </div>
        <div class="item-content">
            <div class="item-header">
                <h3 class="item-title">{{titulo}}</h3>
                <span class="item-price">R$ {{preco}}</span>
            </div>
            <p class="item-description">{{descricao}}</p>
            <div class="item-actions">
                <button class="action-btn cart">
                    <i class="fas fa-shopping-basket fa-sm"></i>
                </button>
            </div>
        </div>
    </div>
    {{/each}}
</div>
<style>
    .menu-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
        padding: 1rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .menu-item {
        background: rgba(30, 30, 30, 0.9);
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        transition: all 0.25s ease;
        border: 1px solid #333;
    }

    .menu-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(255, 122, 51, 0.15);
    }

    .item-image {
        height: 160px;
        overflow: hidden;
    }

    .item-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s;
    }

    .menu-item:hover .item-image img {
        transform: scale(1.03);
    }

    .item-content {
        padding: 1rem;
    }

    .item-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .item-title {
        color: #FF7A33;
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .item-price {
        color: #FF7A33;
        font-weight: 700;
        font-size: 1rem;
    }

    .item-description {
        color: #bbb;
        font-size: 0.85rem;
        margin: 0 0 1rem 0;
        line-height: 1.4;
        min-height: 40px;
    }

    .item-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
    }

    .action-btn {
        background: transparent;
        color: #FF7A33;
        border: 1px solid #FF7A33;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
    }

    .action-btn:hover {
        background: rgba(255, 122, 51, 0.2);
        transform: scale(1.1);
    }

    .action-btn i {
        font-size: 0.8rem;
    }
    .restaurante-info {
        padding: 2rem;
        margin: 0 auto;
        max-width: 1200px;
        border-radius: 0 0 10px 10px;
        border: 1px solid #333;
        border-top: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .restaurante-header {
        display: flex;
        gap: 2rem;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .restaurante-foto {
        width: 120px;
        height: 120px;
        border-radius: 10px;
        overflow: hidden;
        border: 2px solid #FF7A33;
    }

    .restaurante-foto img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .restaurante-detalhes h1 {
        color: #FF7A33;
        margin: 0 0 0.3rem 0;
        font-size: 1.8rem;
    }

    .restaurante-username {
        color: #aaa;
        margin: 0 0 1rem 0;
        font-size: 0.9rem;
    }

    .restaurante-meta {
        display: flex;
        gap: 1.5rem;
        color: #ddd;
        font-size: 0.9rem;
    }

    .restaurante-meta i {
        color: #FF7A33;
        margin-right: 0.3rem;
    }

    .restaurante-descricao {
        color: #ccc;
        line-height: 1.6;
        padding-top: 1rem;
        border-top: 1px solid #333;
        margin: 1rem 0 0 0;
    }

    /* Responsividade */
    @media (max-width: 768px) {
        .menu-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        
        .item-image {
            height: 140px;
        }
        .restaurante-header {
        flex-direction: row; /* Mantém lado a lado */
        gap: 1.5rem;
        align-items: flex-start; /* Alinhamento superior */
        }

        .restaurante-foto {
            width: 80px;
            height: 80px;
            min-width: 80px; /* Evita compressão */
        }

        .restaurante-detalhes {
            flex: 1;
            overflow: hidden; /* Previne vazamento */
        }

        .restaurante-detalhes h1 {
            font-size: 1.4rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .restaurante-username {
            font-size: 0.8rem;
            margin-bottom: 0.8rem;
        }

        .restaurante-meta {
            flex-wrap: wrap;
            gap: 0.8rem;
            row-gap: 0.5rem;
            font-size: 0.8rem;
        }

        .restaurante-descricao {
            font-size: 0.9rem;
            margin-top: 1.2rem;
        }
    }

    /* Ajuste extra para telas muito pequenas */
    @media (max-width: 480px) {
        .restaurante-header {
            gap: 1rem;
        }

        .restaurante-foto {
            width: 60px;
            height: 60px;
            min-width: 60px;
            border-width: 1px;
        }

        .restaurante-meta span {
            display: flex;
            align-items: center;
        }

        .restaurante-meta i {
            font-size: 0.7rem;
        }
    }
</style>