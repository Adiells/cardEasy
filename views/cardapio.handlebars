{{#section "headerLinks"}}
    <li><a href="/#">Sou propietario</a></li>
    <li><a href="/#">Sobre</a></li>
    <li><a href="/admin/cadastro-pratos">Adicionar pedidos</a></li>
{{/section}}
<div class="menu-grid">
    {{#each result}}
    <div class="menu-item">
        <div class="item-image">
            <img src="/uploads/Restaurante{{restaurante_id}}/{{imagem}}" alt="{{titulo}}">
        </div>
        <div class="item-content">
            <div class="item-header">
                <h3 class="item-title">{{titulo}}</h3>
                <span class="item-price">R$ {{preco}}</span>
            </div>
            <p class="item-description">{{descricao}}</p>
            <div class="item-actions">
                <button class="action-btn cart">
                    <i class="fas fa-shopping-basket fa-sm"></i>
                </button>
            </div>
        </div>
    </div>
    {{/each}}
</div>

<style>
    body{
        background-color: rgba(47, 47, 47, 0.9);;
    }
    .menu-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
        padding: 1rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .menu-item {
        background: rgba(30, 30, 30, 0.9);
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        transition: all 0.25s ease;
        border: 1px solid #333;
    }

    .menu-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(255, 122, 51, 0.15);
    }

    .item-image {
        height: 160px;
        overflow: hidden;
    }

    .item-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s;
    }

    .menu-item:hover .item-image img {
        transform: scale(1.03);
    }

    .item-content {
        padding: 1rem;
    }

    .item-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .item-title {
        color: #FF7A33;
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .item-price {
        color: #FF7A33;
        font-weight: 700;
        font-size: 1rem;
    }

    .item-description {
        color: #bbb;
        font-size: 0.85rem;
        margin: 0 0 1rem 0;
        line-height: 1.4;
        min-height: 40px;
    }

    .item-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
    }

    .action-btn {
        background: transparent;
        color: #FF7A33;
        border: 1px solid #FF7A33;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
    }

    .action-btn:hover {
        background: rgba(255, 122, 51, 0.2);
        transform: scale(1.1);
    }

    .action-btn i {
        font-size: 0.8rem;
    }

    /* Responsividade */
    @media (max-width: 768px) {
        .menu-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        
        .item-image {
            height: 140px;
        }
    }
</style>